@model IEnumerable<ClienteDTO>

<h2>Clientes</h2>

<table>
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var cliente in Model)
    {
        <tr>
            <td>@cliente.Nome</td>
            <td>@cliente.Email</td>
            <td>
                <a href="@Url.Action("Editar", "Cliente", new { id = cliente.Id })">Editar</a> |
                <a href="@Url.Action("Excluir", "Cliente", new { id = cliente.Id })">Excluir</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Inserir", "Cliente")">Adicionar Cliente</a>
