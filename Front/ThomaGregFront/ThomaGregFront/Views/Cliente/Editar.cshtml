@model ClienteDTO

<h2>Editar Cliente</h2>

@using (Html.BeginForm("Editar", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Id) <!-- Campo oculto para o ID do cliente -->
    @Html.LabelFor(m => m.Nome)
    @Html.TextBoxFor(m => m.Nome)

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)

    @Html.HiddenFor(m => m.Logotipo)
    @Html.HiddenFor(m => m.Logradouros)

    <!-- Campo para upload de imagem -->
    @Html.LabelFor(m => m.Logotipo)
    <input type="file" name="Logotipo" accept="image/*" />

    <!-- Exibe o logotipo atual, se existir -->
    @if (Model.Logotipo != null && Model.Logotipo.Length > 0)
    {
        <div>
            <p>Logotipo Atual:</p>
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Logotipo)" alt="Logotipo Atual" width="150" />
        </div>
    }

    <button type="submit">Salvar Alterações</button>
}